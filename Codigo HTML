          <div class="form-group">
            <label for="especialidad">Especialidad:</label>
            <select id="especialidad" name="especialidad" required>
              <option value="">Seleccionar especialidad</option>
              <!-- Opciones se cargarán desde JS -->
            </select>
          </div>
          
